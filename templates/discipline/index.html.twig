{% extends 'base.html.twig' %}

{% block title %}Disciplines{% endblock %}

{% block body %}

<a class="btn btn-primary" href="{{path('discipine_new')}}">Create Discipline</a>

{% if disciplines is not empty %}

<table class="table">
    <thead>
        <tr>
            <td>Name</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        {% for discipline in disciplines %}
            <tr>
                <td>{{discipline.name}}</td>
                <td>
                    <a class="btn btn-primary" href="{{path('discipline_edit', {id:discipline.id})}}">Modifier</a>
                    <a class="btn btn-danger" href="{{path('discipline_delete', {id:discipline.id})}}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}

<p>Il n'y a pas de discipline enregistr√©e</p>

{% endif %}

{% endblock %}
